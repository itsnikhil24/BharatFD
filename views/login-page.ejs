  color:#121212;
  background-size: cover; /* Ensures the image covers the entire container */
  background-position: center; /* Centers the image within the container */
  background-repeat: no-repeat; /* Prevents the image from repeating */
  padding: 30px;
justify-content: start;
  text-align: center;
  display: flex;
  flex-direction: column;
 color: #ffffff;
  gap: 20px;
}

.right .tagline {
  font-size: 1.8rem;
  font-weight: bold;
  margin-bottom: 10px;
}

.right .description {
  font-size: 1rem;
  line-height: 1.5;
}

.features {
  display: flex;
  flex-direction: column;
  gap: 15px;
  align-items: center;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 1.1rem;
}

.feature-icon {
  font-size: 1.5rem;
}

.cta-buttons {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-top: 20px;
}

.cta-button {
  text-decoration: none;
  background: linear-gradient(45deg, #ff7e5f, #feb47b);
  color: #ffffff;
  padding: 10px 20px;
  border-radius: 5px;
  font-weight: bold;
  transition: transform 0.3s ease;
}

.cta-button:hover {
  transform: scale(1.05);
  background: linear-gradient(45deg, #feb47b, #ff7e5f);
}
